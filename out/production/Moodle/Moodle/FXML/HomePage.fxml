<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Moodle.HomeController">
    <children>
      <VBox prefHeight="666.0" prefWidth="260.0" style="-fx-background-color: #4B0082;">
         <children>
              <Button fx:id="forum" alignment="BASELINE_LEFT" mnemonicParsing="false" prefHeight="52.0" prefWidth="284.0" text="Go to forum">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
              <Button fx:id="userFiles" alignment="BASELINE_LEFT" mnemonicParsing="false" prefHeight="51.0" prefWidth="284.0" text="Manage My Files" />
              <Button fx:id="groupChat" alignment="BASELINE_LEFT" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="53.0" prefWidth="284.0" text="Start a group chat" />
              <Button fx:id="logout" mnemonicParsing="false" text="Logout" />
         </children></VBox>
      <TextField layoutX="261.0" layoutY="-1.0" prefHeight="78.0" prefWidth="828.0" style="-fx-background-color: #8B008B;" text="Academic notifications are now at your fingertips!">
         <font>
            <Font name="System Bold Italic" size="31.0" />
         </font>
      </TextField>
      <VBox layoutX="834.0" layoutY="77.0" prefHeight="587.0" prefWidth="253.0" style="-fx-background-color: #FFFF00;">
         <children>
              <Button fx:id="seeUsers" mnemonicParsing="false" prefHeight="50.0" prefWidth="254.0" text="See Participants" />
              <Button fx:id="chat" mnemonicParsing="false" prefHeight="53.0" prefWidth="254.0" text="Initiate chat with a participant" />
            <Button mnemonicParsing="false" prefHeight="53.0" prefWidth="253.0" text="Go to my profile" />
              <Button fx:id="updateProfile" mnemonicParsing="false" prefHeight="47.0" prefWidth="260.0" text="Update my profile" />
            <Button fx:id="PostaNotice" mnemonicParsing="false" onAction="#PostNoticeAction" prefHeight="51.0" prefWidth="253.0" text="Post a Notice" />
         </children>
      </VBox>
    </children>
</AnchorPane>
